<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mailtoy.maichuall_project.InputActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nameEvent"
        android:text="Event name: " />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:id="@+id/inputTaskEditText"
        android:text=""/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TimeEvent"
        android:text="Time:" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:ems="10"
        android:id="@+id/inputTimeEditText"
        android:text=""/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/PlaceEvent"
        android:text="Place:" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:ems="10"
        android:id="@+id/inputPlaceEditText"
        android:text=""/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:onClick="saveButtonClicked"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="cancelButtonClicked"
        android:text="Cancel" />

</LinearLayout>